<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/authorImg"
        android:layout_width="37dp"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="44dp"
        android:adjustViewBounds="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/authorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reviewRatingBar"
        android:layout_alignStart="@+id/reviewRatingBar"
        android:text="TextView"
        android:textColor="@color/colorTheme" />

    <RatingBar
        android:id="@+id/reviewRatingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/authorImg"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="-26dp"
        android:numStars="5" />

    <TextView
        android:id="@+id/reviewDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/authorName"
        android:layout_alignStart="@+id/authorName"
        android:layout_below="@+id/reviewRatingBar"
        android:text="TextView" />

    <TextView
        android:id="@+id/reviewTxt"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/authorName"
        android:layout_alignStart="@+id/authorName"
        android:layout_below="@+id/reviewDateTxt"
        android:text="TextView" />


</RelativeLayout>